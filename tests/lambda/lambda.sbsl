метод Скрипт()
    ТестЛямбда("а1,а2", "а3,а4")
;

метод ТестЛямбда(Маркер1: Строка, Маркер2: Строка)
    пер Подстроки = (Стр: Строка) -> Стр.Разделить(",")
    пер Маркеры = метод(м1: Массив<Строка>, м2: Массив<Строка>) -> 
        для Имя из м2
            м1.Добавить(Имя)
        ;

        возврат м1
    ;
    
    знч а1 = Подстроки(Маркер1)
    знч а2 = Подстроки(Маркер2)
    
    знч а = Маркеры(а1, а2)

    Консоль.Записать(а.ВСтроку())
;

// аналог лямбда выражения Подстроки
метод ДанныеСтроки(Стр: Строка): Массив<Строка>
    возврат Стр.Разделить(",")
;